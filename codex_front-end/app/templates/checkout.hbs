{{#bulma-section}}
  {{#bulma-container}}
    <h2 class="title">Checkout</h2>
    {{#bulma-columns is-multiline=true}}
      <div class="column is-5">
        <h3 class="subtitle">Order summary</h3>
        <div class="order-items">
          <table class="table is-fullwidth">
            <thead>
              <tr>
                <th>Book</th>
                <th>Amount</th>
                <th>Price</th>
                <th>Subtotal</th>
              </tr>
            </thead>
            <tbody>
              {{#each model.orderLines as |orderLine| }}
                <tr>
                  <td>{{ orderLine.book.title }}</td>
                  <td>{{ orderLine.amount }}</td>
                  <td>{{ orderLine.sellPrice }}</td>
                  <td>{{ orderLine.subtotal }}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
          <p><strong>Total:</strong> ${{ model.total }}</p>
          <p><strong>Shipping Cost:</strong> ${{ shippingCost }}</p>
          <p><strong>Discounts:</strong> ${{ orderDiscount }}</p>
          <hr>
        </div>
        <div class="field">
          <div class="control has-icons-left">
            {{input type="text" value=promoCode class="input"
                    focus-out="couponCheck" disabled=applyDiscount placeholder="Promo code"}}
            <span class="icon is-small is-left">
              <i class="fa fa-gift" aria-hidden="true"></i>
            </span>
          </div>
        </div>
      </div>
      <div class="column">
        <section>
          <h3 class="subtitle">Shipping info</h3>
          <div class="select">
            <select onchange={{action 'shippingAddressChange' value="target.value"}}>
              <option value="">select...</option>
              <option value="1">Address 1</option>
              <option value="2">Address 2</option>
              <option value="3">Address 3</option>
            </select>
          </div>
          <button type="button" class="button is-primary">New address</button>
        </section>
        <hr>
        <section>
          <h3 class="subtitle">Payment Info</h3>
          <div class="box">
            <h4>Credit cards</h4>
            <label class="checkbox is-block">
              <input type="checkbox" name="credit-card" value="1"
                      onchange={{action 'toggleCreditCard'}}>
              Card 1
            </label>
            <label class="checkbox is-block">
              <input type="checkbox" name="credit-card" value="2"
                      onchange={{action 'toggleCreditCard'}}>
              Card 2
            </label>
            <label class="checkbox is-block">
              <input type="checkbox" name="credit-card" value="3"
                      onchange={{action 'toggleCreditCard'}}>
              Card 3
            </label>
            <br>
            <button type="button" class="button is-primary is-small">Add New</button>
          </div>
          <br>
          <div class="box">
            <h4>Exchange Vouchers</h4>
            <label class="checkbox is-block">
              <input type="checkbox" name="exchange-voucher" value="1"
                      data-discount="10.00"
                      onchange={{action 'toggleExchangeCoupons'}}>
              Coupon 1 - $10,00
            </label>
            <label class="checkbox is-block">
              <input type="checkbox" name="exchange-voucher" value="2"
                      data-discount="30.00"
                      onchange={{action 'toggleExchangeCoupons'}}>
              Coupon 2 - $30,00
            </label>
          </div>
        </section>
      </div>
    {{/bulma-columns}}
    <hr>
    <div class="has-text-right">
      <p style="margin-bottom: 10px"><strong>Purchase value:</strong>
        ${{ orderTotal }}</p>
      <button type="button" class="button" {{action 'concludePurchase'}}>Purchase</button>
    </div>
  {{/bulma-container}}
{{/bulma-section}}
