<form>
  <div class="field">
    <label for="book-title" class="label">Title</label>
    {{#bulma-control}}
      {{input type="text" placeholder="Book title" value=book.title id="book-title" class="input"}}
    {{/bulma-control}}
  </div>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <label for="book-author" class="label">Author</label>
        {{#bulma-control}}
          {{book-select-collection collection=bookCollections.authors
                                    action=(action "setBook")}}
        {{/bulma-control}}
      </div>
      <div class="field">
        <label for="book-publisher" class="label">Publishers</label>
        {{#bulma-control}}
          {{book-select-collection collection=bookCollections.publishers action=(action "setBook")}}
        {{/bulma-control}}
      </div>
      <div class="field">
        <label for="book-pages" class="label">Page numbers</label>
        {{#bulma-control}}
          {{input placeholder="Page numbers" value=book.pageNumbers id="book-pages" class="input"}}
        {{/bulma-control}}
      </div>
      <div class="field">
        <label for="book-edition" class="label">Edition</label>
        {{#bulma-control}}
          {{input placeholder="Book edition" value=book.edition id="book-edition" class="input"}}
        {{/bulma-control}}
      </div>
      <div class="field">
        <label for="book-publishYear" class="label">Publish Year</label>
        {{#bulma-control}}
          {{input placeholder="Publish year" value=book.publishYear id="book-publishYear"
                  class="input"}}
        {{/bulma-control}}
      </div>
    </div>
  </div>
  <div class="field">
    <label for="book-synopsis" class="label">Synopsis</label>
    {{#bulma-control}}
      {{textarea value=book.synopsis class="textarea"}}
    {{/bulma-control}}
  </div>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <label for="book-height" class="label">Width</label>
        {{#bulma-control class="has-icons-right"}}
          {{input value=book.width id="book-width" placeholder="15" class="input"}}
          <span class="icon is-medium is-right">cm</span>
        {{/bulma-control}}
      </div>
      <div class="field">
        <label for="book-height" class="label">Height</label>
        {{#bulma-control class="has-icons-right"}}
          {{input value=book.height id="book-height" placeholder="17" class="input"}}
          <span class="icon is-medium is-right">cm</span>
        {{/bulma-control}}
      </div>
      <div class="field">
        <label for="book-depth" class="label">Depth</label>
        {{#bulma-control class="has-icons-right"}}
          {{input value=book.depth id="book-depth" placeholder="5" class="input"}}
          <span class="icon is-medium is-right">cm</span>
        {{/bulma-control}}
      </div>
      <div class="field">
        <label for="book-weight" class="label">Weight</label>
        {{#bulma-control class="has-icons-right"}}
          {{input value=book.weight id="book-weight" placeholder="150" class="input"}}
          <span class="icon is-medium is-right">gr</span>
        {{/bulma-control}}
      </div>
    </div>
  </div>
  <div class="field">
    <div class="field-body">
      <div class="field">
        <label for="book-price-group" class="label">Price group</label>
        {{#bulma-control}}
          {{book-select-collection collection=bookCollections.priceGroups
                                    isPriceGroup=true action=(action "setBook")}}
        {{/bulma-control}}
      </div>
      <div class="field">
        <label for="book-isbn" class="label">ISBN</label>
        {{#bulma-control}}
          {{input value=book.isbn id="book-isbn" class="input"}}
        {{/bulma-control}}
      </div>
      <div class="field">
        <label for="book-barcode" class="label">Barcode</label>
        {{#bulma-control}}
          {{input value=book.barcode id="book-barcode" class="input"}}
        {{/bulma-control}}
      </div>
    </div>
  </div>
  <div class="field">
    <label for="book-categories" class="label">Categories</label>
    {{#bulma-control}}
      {{book-select-collection collection=bookCollections.categories
                                isMultiple=true action=(action "setBook")}}
    {{/bulma-control}}
  </div>
  <button type="button" class="button is-primary"
          {{action 'saveBtnClick' book}}>{{btnLabel}}</button>
</form>
